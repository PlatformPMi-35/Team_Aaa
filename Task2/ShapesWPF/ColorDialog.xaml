<Window x:Class="ShapesWPF.ColorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShapesWPF"
        mc:Ignorable="d"
        Title="ColorDialog" Height="450" Width="800">
    <Grid>
        <Label x:Name="label" Content="Select color:" HorizontalAlignment="Left" Margin="344,110,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="323,165,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="comboBox_SelectionChanged_1">
            <TextBlock>Purple</TextBlock>
            <TextBlock>Black</TextBlock>
            <TextBlock>Red</TextBlock>
            <TextBlock>Green</TextBlock>
            <TextBlock>Pink</TextBlock>
        </ComboBox>
        <Button x:Name="button" Content="Confirm" HorizontalAlignment="Left" Margin="344,256,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.045,-0.184" Click="button_Click"/>
        <Label x:Name="label1" Content="Label" HorizontalAlignment="Left" Margin="114,198,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
